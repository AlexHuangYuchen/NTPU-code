#include<stdio.h>
int main(){
    int h;
    scanf("%d",&h);

    int n;
    int have=0,empty=0,drink=0;
    for(int i=0;i<h;i++){
        have=0;
        empty=0;
        drink=0;
        scanf("%d",&n);
        have+=n;
        if(n%2==0){
            empty++;
        }
        while(1){
            //çœ‹have empty
            have+=empty/3;
            empty=empty%3;
            drink+=have;
            empty+=have;
            have=0;
            if(empty<3){
                break;
            }
        }
        printf("%d\n",drink);
    }
}
