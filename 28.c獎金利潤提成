#include<stdio.h>
int main(){
    int m;
    scanf("%d",&m);
    double sum=0;
    if(m<=100000){
        sum+=m*0.1;
    }
    else if(m>100000 && m<=200000){
        sum+=100000*0.1+(m-100000)*0.075;
    }
    else if(m>200000 && m<=400000){
        sum+=100000*0.1+(100000)*0.075+(m-200000)*0.05;
    }
    else if(m>400000 && m<=600000){
        sum+=100000*0.1+(100000)*0.075+(200000)*0.05+(m-400000)*0.03;
    }
    else if(m>600000 && m<=1000000){
        sum+=100000*0.1+(100000)*0.075+(200000)*0.05+(400000)*0.03+(m-600000)*0.015;
    }
    else{
        sum+=100000*0.1+(100000)*0.075+(200000)*0.05+(400000)*0.03+(600000)*0.015+(m-1000000)*0.01;
    }
    printf("%.2lf",sum);
}
